<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="787.0" prefWidth="860.0" spacing="10.0" styleClass="display" stylesheets="@interface.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task_2.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fitHeight="196.0" fitWidth="251.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@other/pictures/decorations/menu_cards.png" />
      </image>
      <VBox.margin>
         <Insets top="-25.0" />
      </VBox.margin>
   </ImageView>
    <Label fx:id="pokerLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="58.0" prefWidth="280.0" styleClass="menuLabel" text="Покер" textFill="WHITE">
        <font>
            <Font size="96.0" />
        </font>
      <padding>
         <Insets bottom="-50.0" top="-50.0" />
      </padding>
      <effect>
         <Glow level="1.0" />
      </effect>
    </Label>
   <Label>
      <padding>
         <Insets top="50.0" />
      </padding>
   </Label>
    <Button fx:id="playButton" alignment="CENTER" contentDisplay="CENTER" onAction="#onPlayButtonClick" prefHeight="140.0" prefWidth="700.0" styleClass="menuButton" text="Играть" textFill="WHITE">
        <effect>
            <ColorAdjust />
        </effect>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <font>
            <Font size="58.0" />
        </font>
      <VBox.margin>
         <Insets />
      </VBox.margin></Button>
    <Button fx:id="settingsButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSettingsButtonClick" prefHeight="140.0" prefWidth="700.0" styleClass="menuButton" text="Настройки" textFill="WHITE">
        <font>
            <Font size="58.0" />
        </font>
    </Button>
    <Button fx:id="exitButton" alignment="CENTER" mnemonicParsing="false" onAction="#onExitButtonClick" prefHeight="140.0" prefWidth="700.0" styleClass="menuButton" text="Выход" textFill="WHITE">
        <font>
            <Font size="58.0" />
        </font>
    </Button>
</VBox>
